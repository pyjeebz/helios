# =============================================================================
# Example Terraform Variables
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control
# =============================================================================

project_id  = "your-gcp-project-id"
region      = "us-central1"
environment = "dev"

# Cloud SQL (adjust based on load testing needs)
cloudsql_tier      = "db-custom-2-4096"  # 2 vCPU, 4GB RAM
cloudsql_disk_size = 20

# Redis
redis_memory_size = 1      # GB
redis_tier        = "BASIC" # Use STANDARD_HA for high availability
